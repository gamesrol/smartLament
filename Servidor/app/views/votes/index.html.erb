<h1>Lista de votos</h1>

<table>
  <thead>
    <tr>
      <th>Propuesta</th>
      <th>Voto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.proposal_id %></td>
        <td><%= vote.vote %></td>
        <td><%= link_to 'Mostrar', vote %></td>
        <td><%= link_to 'Editar', edit_vote_path(vote) %></td>
        <td><%= link_to 'Eliminar', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo voto', new_vote_path %>
