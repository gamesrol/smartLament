<h1>Lista de propuestas</h1>
<div class="col-lg-12">
<table class="table table-hover">
  
    <tr>
      <th>Usuario</th>
      <th>T&iacute;tulo</th>
      <th>Objetivo</th>
      <th>Finalidad</th>
      <th>&Aacute;mbito</th>
      <th>Tem&aacute;tica</th>
      <th colspan="3"></th>
    </tr>
 

  <tbody>
    <% @proposals.each do |proposal| %>
      <tr>
        <td><%= proposal.user_id %></td>
        <td><%= proposal.title %></td>
        <td><%= proposal.object %></td>
        <td><%= proposal.finality %></td>
        <td><%= proposal.scope.name %></td>
        <td><%= proposal.subject.name %></td>
        <td ><%=  link_to 'Mostrar', proposal, :class => "btn btn-default"  %></td>
        <td><%= link_to 'Editar', edit_proposal_path(proposal) %></td>
        <td><%= link_to 'Eliminar', proposal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Nueva propuesta', new_proposal_path %>
